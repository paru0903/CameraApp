<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F3D"
    tools:context=".ResultActivity2">

    <!-- 成功アイコン -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/ic_check_circle"
        app:tint="#2CCB5E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- メッセージ -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="マップの生成が完了しました。"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/successIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- マップを見る -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewMapButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="マップを見る"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/messageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ホームに戻る -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backHomeButton"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="ホームに戻る"
        android:textColor="#0A0F3D"
        android:backgroundTint="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewMapButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>